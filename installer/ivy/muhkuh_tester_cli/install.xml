<project xmlns:ivy="antlib:org.apache.ivy.ant" xmlns:if="ant:if" name="muhkuh_tester_cli" default="install_muhkuh_tester_cli">
	<target name="install_muhkuh_tester_cli" description="install all components">
		<copy todir="${install.lua}" includeEmptyDirs="true">
			<fileset dir="lua" />
		</copy>
		
		<!-- Copy the initialisation file to the base folder of the installation. -->
		<copy file="muhkuh_cli_init.lua" todir="${install.base}" />
	</target>
</project>
