<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="setup2html.xsl"?>

<muhkuh_buildsystem project="flasher">
	<project_version>
		<major>1</major>
		<minor>0</minor>
	</project_version>

	<paths>
		<marker>~/.m2/depack</marker>
		<repository>~/.m2/repository</repository>
		<depack>~/.m2/depack</depack>
	</paths>

	<repositories>
		<repository name="muhkuh@sourceforge">http://downloads.sourceforge.net/project/muhkuh/maven2</repository>
	</repositories>

	<scons>
		<group>org.scons</group>
		<name>scons-local</name>
		<package>scons-local</package>
		<version>2.0.1_1</version>
		<typ>tar.bz2</typ>
	</scons>

	<tools>
		<tool>
			<group>nz.co.methods</group>
			<name>asciidoc</name>
			<package>asciidoc</package>
			<version>8.5.3_1</version>
			<typ>tar.bz2</typ>
		</tool>
<!--
		<tool>
			<group>org.gnu.gcc</group>
			<name>gcc-arm-elf-none-eabi_${platform}_${machine}</name>
			<version>4.5.1_1</version>
			<typ>tar.bz2</typ>
		</tool>
-->
		<tool>
			<group>org.gnu.gcc</group>
			<name>gcc-arm-elf</name>
			<package>gcc-arm-elf_${platform}_${machine}</package>
			<version>4.3.3_4</version>
			<typ>tar.bz2</typ>
		</tool>
	</tools>

	<filters>
		<filter>
			<template>templates/scons.bat</template>
			<destination>scons.bat</destination>
		</filter>
		<filter>
			<template>templates/scons.sh</template>
			<destination>scons.sh</destination>
		</filter>
		<filter>
			<template>templates/site_init.py</template>
			<destination>site_scons/site_init.py</destination>
		</filter>
	</filters>
</muhkuh_buildsystem>
