<?xml version="1.0" ?>
<makefile>
	<!-- ================================================================== -->
	<!--                     The romloader baka plugin                      -->
	<!-- ================================================================== -->

	<module id="plugin_romloader_baka">
		<dllname>romloader_baka</dllname>

		<dirname>$(SRCDIR)/bin</dirname>
		<include>$(SRCDIR)</include>
		<include>$(SRCDIR)/lua/lib/lua-5.1.4/src</include>
		<include>$(SRCDIR)/plugins/romloader/baka</include>
		<sources>
			plugins/muhkuh_plugin_interface.cpp
			plugins/romloader/romloader.cpp
			plugins/romloader/baka/romloader_baka_main.cpp
			plugins/romloader/baka/_luaif/romloader_baka_wrap.cpp
		</sources>
		<headers>
			plugins/romloader/romloader.h
			plugins/romloader/baka/romloader_baka_main.h
			plugins/romloader/baka/_luaif/swigluarun.h
		</headers>
		<!-- windows needs the lua import library -->
		<if cond="PLATFORM_WIN32=='1'">
			<library>lua_dll</library>
		</if>
	</module>
</makefile>
